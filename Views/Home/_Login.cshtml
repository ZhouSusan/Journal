@model LoginUser

<div class="text-center">
    <h2>Sign in here!</h2>
    <form asp-action="loginUser" method="post" asp-controller="Home">
        <div class="form-group">
            <label>Email:</label>
            <input asp-for="LoginEmail" class="form-control">
            <span asp-validation-for="LoginEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input asp-for="LoginPassword" class="form-control">
            <span asp-validation-for="LoginPassword" class="text-danger"></span>
        </div>
        <button class="btn btn-outline-success">Login</button>
    </form>    
</div>