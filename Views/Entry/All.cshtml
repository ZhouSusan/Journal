<h1 style="margin-top: 20px; margin-bottom: 20px; color:green;">Welcome, @ViewBag.CurrentUser.FirstName @ViewBag.CurrentUser.LastName!</h1>
@model List<Entry>

<div class="text-center">
    <table class="table table-striped table-hover">
        <thead>
        <tr>

        <th scope="col">Title</th>
        <th scope="col">Date</th>
        </tr>
        <tbody>
            @foreach (Entry e in Model)
            {
                <tr>
                    <td><a asp-controller="Entry" asp-action="Details" asp-route-entryId="@e.EntryId">@e.Title</a></td>
                    <td>@e.Date</td>
                    <td class="d-flex">
                        <form asp-controller="Entry" asp-action="Update" asp-route-entryId="@e.EntryId">
                            <button class="btn btn-outline-success">Edit</button>
                        </form>
                        <form asp-action="Delete" asp-controller="Entry" asp-route-entryId="@e.EntryId">
                            <button class="btn btn-outline-danger">Delete</button>
                        </form>
                        <form asp-action="Details" asp-controller="Entry" asp-route-entryId="@e.EntryId">
                            <button class="btn btn-outline-danger">View</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
</div>
